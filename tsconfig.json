{
  "compilerOptions": {
    "target": "ES2020",                          // Specify ECMAScript target version
    "module": "node16",                        // Use commonjs for Node.js modules
    "lib": ["ES2020"],                           // Specify library files to include
    "outDir": "./dist",                          // Redirect output structure to dist folder
    "rootDir": "./src",                          // Specify root directory of input files
    "strict": true,                              // Enable all strict type-checking options
    "esModuleInterop": true,                     // Enable compatibility with CommonJS and ES6 modules
    "forceConsistentCasingInFileNames": true,    // Ensure file names are case-consistent
    "skipLibCheck": true,                        // Skip type checking of declaration files
    "moduleResolution": "node16",                  // Use Node.js-style module resolution
    "noImplicitAny": true                        // Raise error on expressions and declarations with `any` type
  },
  "include": [
    "src/**/*.ts"                                // Include all TypeScript files in the src folder
  ],
  "exclude": [
    "node_modules",                              // Exclude node_modules from compilation
    "dist"                                       // Exclude output directory
  ]
}
